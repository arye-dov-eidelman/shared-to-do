<div class="user-name pa2 ma2">
  Name: <%= @user.name %>
</div>

<div class="user-email pa2 ma2">
  Email: <%= @user.email %>
</div>


<% if @user.persisted? %>
  <div class="pa2 ma2">
    <%= link_to "Edit Account Details", edit_user_path(@user) %>
  </div>

  <div class="pa2 ma2">
    <%= link_to "Delete Your Account", @user, method: :delete,
      data: {confirm: "Are you sure you want to delete your account?"}
    %>
  </div>
<% end %>
