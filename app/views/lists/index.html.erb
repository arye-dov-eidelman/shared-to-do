
<div class="flex">
  <div id="lists-area">
    <%= form_with url: lists_path, method: :get, local: true, class: "search_form" do |f| %>
      <div class="pa2 ma2 bg-white flex br2">
        <%= f.text_field :query, value: @query, class: "flex-auto ma2 pa2 b--none bg-black-10 br-pill" %>
        <button type="submit" class="w-px-40 h-px-40 ma2 pa2 b--none bg-white hover-bg-black-20 br-100">
          <i class="material-icons-outlined">search</i>
        </button>
      </div>
    <% end %>

    <h2 class="pa2 mh2">Lists</h2>

    <div class="pv1 mv1 ph2 mh2">
      <%= link_to 'New List', new_list_path %>
    </div>

    <div id="lists" class="pa2 ma2">
      Loading...
    </div>
  </div>

  <div id="list-area">
  </div>
</div>
