
<div class="flex">
  <div id="lists-area">
    <%= form_with url: lists_path, method: :get, local: true, class: "search_form" do |f| %>
      <div class="pa2 ma2 bg-light-green flex br2">
        <%= f.text_field :query, value: @query, class: "flex-auto ma2 pa2 b--none bg-washed-green br2" %>
        <%= f.submit "Search", class: "ma2 pa2 b--none bg-washed-green br2" %>
      </div>
    <% end %>

    <h2 class="pa2 mh2">Lists</h2>

    <div class="pv1 mv1 ph2 mh2">
      <%= link_to 'New List', new_list_path %>
    </div>

    <div id="lists" class="pa2 ma2">
      Loading...
    </div>
  </div>

  <div id="list-area">
  </div>
</div>
